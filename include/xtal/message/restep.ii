		XTAL_TO4_(XTAL_TN2 step(auto &&...oo), S_::head(XTAL_FWD_(oo)...))

	};
};
template <integral_p U=typename bond::realized::iota_t>
using restep_t = confined_t<restep<U>>;

XTAL_FN2 restep_f(auto &&w)

XTAL_NYM T_restore;
template <class ...Ts> concept restore_q = common::tab_p<T_restore, Ts...>;


////////////////////////////////////////////////////////////////////////////////
///\
Provides the type `store` as a specialization of `common::fluid::sluice`. \
If `N == -1` the `store` is allocated dynamically. \

template <int N=-1>
struct restore
{
	using subkind = common::tab<T_restore>;
	
	template <any_q S>
	class subtype: public common::compose_s<S, subkind>
	{
		using S_ = common::compose_s<S, subkind>;
		
	public:
		using S_::S_;
		
		template <class U>
		using store = common::fluid::sluice<U[(unsigned) N]>;

	};
};



XTAL_NYM T_restash;
template <class ...Ts> concept restash_q = common::tab_p<T_restash, Ts...>;


////////////////////////////////////////////////////////////////////////////////
///\
Provides the type `stash` as a specialization of `common::fluid::siphon`. \
If `N == -1` the `stash` is allocated dynamically. \

template <int N=-1>
struct restash
{
	using subkind = common::tab<T_restash>;
	
	template <any_q S>
	class subtype: public common::compose_s<S, subkind>
	{
		using S_ = common::compose_s<S, subkind>;
		
	public:
		using S_::S_;
		
		template <class U>
		using stash = common::fluid::siphon<U[(unsigned) N]>;

	};
};



////////////////////////////////////////////////////////////////////////////////
///\
Represents a mixable `integral` quantity determined by `sizeof(U)`. \

template <class U>
struct pulse<U>
{
	using _computer = atom::compute<U>;
	using T_delta = typename _computer::delta_t;

	using subkind = atom::compose<fuse<T_delta>, atom::tag<pulse>>;

	template <class S>
	class subtype: public atom::compose_s<S, subkind>
	{
		using S_ = atom::compose_s<S, subkind>;
	
	public:
		using S_::S_;

	};
};



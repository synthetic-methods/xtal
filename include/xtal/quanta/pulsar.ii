template <                     typename ..._s> XTAL_NYM pulsar;
template <                     typename ..._s> XTAL_ASK pulsar_q = bond::tag_p<pulsar, _s...>;
template <array_q W=size_t[2], typename ...As> XTAL_USE pulsar_t = confined_t<pulsar<W, As...>>;


////////////////////////////////////////////////////////////////////////////////
///\

template <array_q W, typename ...As>
struct pulsar<W, As...>
{
	XTAL_LET N_ = _std::       extent_v<W>;
	XTAL_USE U_ = _std::remove_extent_t<W>;
	
	using W_pulse = quantum::pulse_t<U_>[N_];
	using subkind = bond::compose<bond::tag<pulsar>, As..., fusor<W_pulse>>;

	template <class S>
	using subtype = bond::compose_s<S, subkind>;

};



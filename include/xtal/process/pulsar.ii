template <array_q W, typename ...As>
struct pulsar<W, As...>
{
	XTAL_LET _N = _std::       extent_v<W>;
	XTAL_USE _U = _std::remove_extent_t<W>;
	
	using pulse_w = precess::pulse_t<_U>[_N];
	using subkind = common::compose<common::tag<pulsar>, As..., fusor<pulse_w>>;

	template <class S>
	using subtype = common::compose_s<S, subkind>;

};



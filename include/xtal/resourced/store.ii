XTAL_ENV_(push)
namespace xtal::resourced
{/////////////////////////////////////////////////////////////////////////////////
/////////////////////////////////////////////////////////////////////////////////

XTAL_NYM store_a;
template <class ...Ts> concept store_q = atom::tabbed_p<store_a, Ts...>;


////////////////////////////////////////////////////////////////////////////////
///\
Provides a specialization of `bond::store`. \
If `N == -1`, the member-type `store_t` is dynamically allocated. \

template <int N=-1>
struct store
{
	using subkind = atom::tab<store_a>;
	
	template <cell::any_q S>
	class subtype: public atom::compose_s<S, subkind>
	{
		using S_ = atom::compose_s<S, subkind>;
		
	public:
		using S_::S_;
		
		template <class U>
		using store_t = bond::store_t<U[(unsigned) N]>;

	};
};


///////////////////////////////////////////////////////////////////////////////
}/////////////////////////////////////////////////////////////////////////////

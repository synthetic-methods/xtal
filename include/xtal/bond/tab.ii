template <class Y>
struct tab
{
	class type
	{};
	template <class S>
	class subtype: public type, public S
	{
	public:
		using S::S;
		
	};
	template <of_q<type> S>
	class subtype<S>: public S
	{
	public:
		using S::S;
		
	};
};
template <class Y>
using tab_t = typename tab<Y>::type;

template <class Y, class ...Ts>
concept tab_p = of_p<tab_t<Y>, Ts...>;

template <class T, class Y>
concept tab_q = tab_p<Y, T>;



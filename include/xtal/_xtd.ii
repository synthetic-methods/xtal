{
	template <_std::convertible_to<T> W, _std::convertible_to<T> ...Xs>
	XTAL_DEF_(return,inline,let)
	operator() (W &&w, Xs &&...xs) const
	noexcept -> auto
	{
		return plus_multiplies_f(XTAL_REF_(w), XTAL_REF_(xs)...);
	}

};

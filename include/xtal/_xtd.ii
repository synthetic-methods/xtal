/*!
\brief   Combinines the magnitude of `t` with the sign-bit of `s`.
\note    Uses `__builtin_copysign` to provide `constexpr` evaluation,
         but guaranteed to return the same type.
*/
// `constexpr`!
template <rational T, class S>
XTAL_DEF_(return,inline,let)
XTAL_NYM_(copysign) (T const t, S const s)
noexcept -> T
{
	using U = rend_unsigned_t<T>;
	XTAL_IF0
	XTAL_0IF (sizeof(T) != sizeof(S) and rational<S>) {
		return XTAL_NYM_(copysign) (t, (T) s);
	}
	XTAL_0IF (sizeof(T) != sizeof(S) and integral<S>) {
		return XTAL_NYM_(copysign) (t, make_signed_f<T>(s));
	}
	XTAL_0IF (sizeof(T) == sizeof(__builtin_copysign(t, s))) {
		return __builtin_copysign(t, s);
	}
	XTAL_0IF_(else) {
		U constexpr  positive_mask = ~U{} >> 1, sign_mask = ~positive_mask;
		U const t_ = positive_mask&rend_unsigned_f<T>(t);
		U const s_ =     sign_mask&rend_unsigned_f<T>(s);
		return bit_cast<T>(XTAL_MOV_(t_)|XTAL_MOV_(s_));
	}
};
XTAL_DEF_(let) copysign = [] XTAL_1FN_(call) (XTAL_NYM_(copysign));
static_assert(same_type_as<float, XTAL_ALL_(copysign(1.F, 1.F))>);



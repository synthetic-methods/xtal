/*!
\returns The result of `w + x*(y*...*ys)`, using `fma` where possible.
\note    May be extended via ADL.
*/
XTAL_DEF_(return,inline,let)
plus_multiplies_f(auto &&w, auto &&x, auto &&y)
noexcept -> auto
{
	using Z = XTAL_ALL_(w + x*y);
	XTAL_IF0
	XTAL_0IF_(consteval) {
		return                              XTAL_REF_(y)*XTAL_REF_(x) + XTAL_REF_(w) ;
	}
#if   XTAL_SYS_(FMA) and XTAL_SYS_(builtin)
	XTAL_0IF (requires {_std::fma(y, x, w);}) {
		return static_cast<Z>(__builtin_fma(XTAL_REF_(y),XTAL_REF_(x),  XTAL_REF_(w)));
	}
#endif
#if   XTAL_SYS_(FMA)
	XTAL_0IF (requires {fma(y, x, w);}) {
		return static_cast<Z>(          fma(XTAL_REF_(y),XTAL_REF_(x),  XTAL_REF_(w)));
	}
#endif
	XTAL_0IF_(else) {
		return                              XTAL_REF_(y)*XTAL_REF_(x) + XTAL_REF_(w) ;
	}
}
template <class V>
XTAL_DEF_(return,inline,let)
plus_multiplies_f(V const &w, _std::complex<V> const &x, V const &y)
noexcept -> _std::complex<V>
{
	XTAL_IF0
	XTAL_0IF XTAL_TRY_(to) (fma(y, x, w))
	XTAL_0IF_(else) {return {
		plus_multiplies_f(w, x.real(), y)
	,	x.imag()*y
	};}
}
template <class V>
XTAL_DEF_(return,inline,let)
plus_multiplies_f(V const &w, V const &x, _std::complex<V> const &y)
noexcept -> _std::complex<V>
{
	XTAL_IF0
	XTAL_0IF XTAL_TRY_(to) (fma(y, x, w))
	XTAL_0IF_(else) {return {
		plus_multiplies_f(w, x, y.real())
	,	x*y.imag()
	};}
}

template <class V>
XTAL_DEF_(return,inline,let)
plus_multiplies_f(_std::complex<V> const &w, V const &x, V const &y)

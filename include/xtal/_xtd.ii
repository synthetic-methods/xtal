template <class T=void>
XTAL_DEF_(return,inline,let)
make_signed_f(auto const f)
noexcept -> auto
{
	using F = XTAL_ALL_(f);
	if constexpr (same_type_as<T, void> or same_size_as<T, F>) {
		XTAL_IF0
		XTAL_0IF (    constant_equivocable<F>) {return                make_signed_f    (f());}
		XTAL_0IF (_std::   signed_integral<F>) {return                                  f   ;}
		XTAL_0IF (_std:: unsigned_integral<F>) {return    bit_cast <  make_signed_t<F>>(f)  ;}
		XTAL_0IF_(else)                        {return static_cast <  make_signed_t<F>>(f)  ;}
	}
	else {
		return static_cast<make_signed_t<T>>(make_signed_f(f));
	}
}
template <class T=void>
XTAL_DEF_(return,inline,let)
rend_signed_f (auto const f)
noexcept -> auto
{
	using F = XTAL_ALL_(f);
	if constexpr (same_type_as<T, void> or same_size_as<T, F>) {
		XTAL_IF0
		XTAL_0IF (    constant_equivocable<F>) {return                rend_signed_f    (f());}
		XTAL_0IF (_std::   signed_integral<F>) {return                                  f   ;}
		XTAL_0IF (_std:: unsigned_integral<F>) {return    bit_cast <  make_signed_t<F>>(f)  ;}
		XTAL_0IF_(else)                        {return    bit_cast <  make_signed_t<F>>(f)  ;}
	}
	else {
		return   rend_signed_f(make_signed_f<T>(f));
	}
}

template <class T=void>

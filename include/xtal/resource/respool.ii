XTAL_NYM __respool__;
template <class ...Ts> concept respool_q = common::tab_p<__respool__, Ts...>;


////////////////////////////////////////////////////////////////////////////////
///\
Provides a specialization of `common::fluid::spool`. \
If `N == -1`, the member-type `spool_t` is dynamically allocated. \

template <int N=-1>
struct respool
{
	using subkind = common::tab<__respool__>;
	
	template <any_q S>
	class subtype: public common::compose_s<S, subkind>
	{
		using _S = common::compose_s<S, subkind>;
		
	public:
		using _S::_S;
		
		template <class U>
		using spool_t = common::fluid::spool_t<U[(unsigned) N]>;

	};
};



XTAL_NYM __restore__;
template <class ...Ts> concept restore_q = common::tab_p<__restore__, Ts...>;


////////////////////////////////////////////////////////////////////////////////
///\
Provides a specialization of `common::fluid::store`. \
If `N == -1`, the member-type `store_t` is dynamically allocated. \

template <int N=-1>
struct restore
{
	using subkind = common::tab<__restore__>;
	
	template <any_q S>
	class subtype: public common::compose_s<S, subkind>
	{
		using S_ = common::compose_s<S, subkind>;
		
	public:
		using S_::S_;
		
		template <class U>
		using store_t = common::fluid::store_t<U[(unsigned) N]>;

	};
};


